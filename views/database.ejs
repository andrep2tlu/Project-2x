<!DOCTYPE html>
<html lang="et">
<head>
  <meta charset="utf-8">
  <title>Void Trader</title>
    <!-- 1) Theme class light/dark -->
  <script>
    const saved = localStorage.getItem("themeMode");
    const useLight = saved === "true";
    document.documentElement.classList.toggle("light-mode", useLight);
  </script>

  <!-- 2) Inline for critical CSS for navbar and header -->
  <style>
    body {
      margin: 0;
      background-color: #000;
      color: #fff;
      font-family: sans-serif;
    }
    .navbar {
      display: flex;
      background-color: #494242;
      overflow: hidden;
    }
    .navbar a {
      padding: 14px 16px;
      text-decoration: none;
      color: #fff;
      font-size: 16px;
    }
    .header {
      display: flex;  
      justify-content: space-between;
      align-items: center;
      padding: 1rem;
    }
  </style>

  <!-- 3) Preload full stylesheet without blocking -->
  <link rel="preload" href="/css/styles.css" as="style" onload="this.rel='stylesheet'">
  <noscript>
    <link rel="stylesheet" href="/css/styles.css">
  </noscript>
</head>
<body>

  <div class="navbar">
    <a class="home1" href="/">Home</a>
    <a class="light1" onclick="toggleLightMode()">Light Mode</a>
    <a class="login1" href="/register">Login</a>
    <div class="dropdown">
      <button class="dropbtn">Contents</button>
      <div class="dropdown-content">
        <a href="/resurgence">Prime Resurgence</a>
        <a href="/voidTrader">Void trader</a>
        <a href="#">Nightwave</a>
      </div>
    </div>
  </div>

    <h1>Database</h1>

<% if (error) { %>
  <div class="error"><%= error %></div>
<% } %>

<% if (rows && rows.length) { %>
  <table>
    <thead><tr>
      <% Object.keys(rows[0]).forEach(col => { %><th><%= col %></th><% }) %>
    </tr></thead>
    <tbody>
      <% rows.forEach(row => { %>
        <tr>
          <% Object.values(row).forEach(val => { %><td><%= val %></td><% }) %>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p>No rows found.</p>
<% } %>

     <!-- 5) Defer scripts to avoid render-blocking -->
    <script src="/scripts/functions.js" defer></script>
    <script src="/scripts/theme-toggle.js" defer></script>
</body>
</html>